<%= form_with(model: @kp_comment, local: true) do |form| %>
  <% if @kp_comment.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(@kp_comment.errors.count, "error") %> prohibited this kp_comment from being saved:</h2>

      <ul>
        <% @kp_comment.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="text-center mb-5">
    <h2 class="section-title">New comment</h2>
  </div>

  <%= form.hidden_field :kp_post_id, value: @kp_post.id %>
  <%= form.hidden_field :kp_user_id, value: @kp_comment.kp_user %>
  
  <div class="row d-flex justify-content-center comment">
    <div class="col-md-8 col-lg-6 mb-5">
      <div class="card shadow-0 border">
        <div class="card-body p-0">
          <div class="card m-0">
            <div class="card-body">             
              <div class="d-flex flex-row align-items-center">
                <div class="rounded-circle overflow-hidden">
                  <img src="https://static.vecteezy.com/system/resources/previews/005/544/718/non_2x/profile-icon-design-free-vector.jpg" alt="avatar" width="100"  height="100" />
                </div>
                <div class="comment-content ms-2 w-100">
                  <%= form.text_area :content, class: "comment-content border-0 w-75", placeholder: "Write your comment here", style: "resize: none; width: 100%;" %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="text-center mt-5">
        <%= form.submit "Guardar comentario", class: "btn btn-dark posts-title" %>
      </div>
    </div>
  </div>
<% end %>
